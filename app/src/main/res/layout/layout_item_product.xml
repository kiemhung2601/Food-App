<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_image"
    app:strokeWidth="1dp"
    android:elevation="8dp"
    app:strokeColor="@color/grey"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView

            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_product"
                android:layout_width="148dp"
                android:layout_height="148dp"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginHorizontal="10dp"
            android:textSize="@dimen/title"
            android:text="BBQ Chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:layout_marginVertical="@dimen/margin_item_5"
            android:layout_marginLeft="@dimen/margin_item_10"
            android:id="@+id/rb_ratings_product"
            android:theme="@style/RatingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:stepSize="0.1"
            android:rating="3.5"
            android:numStars="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/margin_layout"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="47,000Ä‘"
                android:textStyle="bold"
                android:textSize="@dimen/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_add"
                android:clickable="true"
                app:cardBackgroundColor="@color/main_color"
                app:cardCornerRadius="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>