<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_food_ratings"
                android:scaleType="fitXY"
                android:src="@drawable/gradient_background"
                android:layout_width="148dp"
                android:layout_height="200dp"/>
            <TextView
                android:id="@+id/tv_name_food_ratings"
                android:layout_marginTop="@dimen/margin_item_10"
                android:layout_marginLeft="@dimen/margin_item_5"
                android:textSize="@dimen/tilte_large"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Cơm chiên cá mặn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            
            <LinearLayout
                android:layout_marginBottom="@dimen/margin_layout"
                android:layout_marginRight="@dimen/margin_item_10"
                android:layout_gravity="bottom|end"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_number_ratings"
                    android:textStyle="bold"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/tilte_largest"
                    android:text="3.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/title"
                    android:textColor="@color/grey"
                    android:text="/5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/margin_item_10"
            android:orientation="vertical"
            android:layout_width="170dp"
            android:layout_height="200dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    app:cardCornerRadius="25dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/img_person_ratings"
                        android:src="@drawable/menu_food"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_name_ratings"
                    android:textStyle="bold"
                    android:textSize="@dimen/body"
                    android:layout_marginLeft="@dimen/margin_item_5"
                    android:layout_gravity="center"
                    android:text="Đặng Kiêm Hùng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RatingBar
                android:id="@+id/rb_ratings"
                android:layout_marginVertical="@dimen/margin_item_5"
                android:theme="@style/RatingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:isIndicator="true"
                android:stepSize="0.1"
                android:rating="3.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_review_ratings"
                android:textSize="@dimen/body"
                android:text="Đây là nọi dung đánh giá, chào bạn đến với app của Kiếm hùng. Món ăn nay rất ngon và giá rẻ, bạn thưởng thức no trong troi đông giá rét thì tuyệt vời, cứu mèo, con đà điểu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>