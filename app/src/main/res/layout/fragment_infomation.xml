<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragment.InfomationFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize">

        <ImageButton
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:textSize="@dimen/tilte_large"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="@dimen/margin_item_10"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="50dp"
        app:strokeWidth="5dp"
        app:strokeColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_logo"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginTop="@dimen/margin_item_10"
        android:textStyle="bold"
        android:textSize="@dimen/title"
        android:layout_gravity="center_horizontal"
        android:text="Đặng Kiếm Hùng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/margin_item_5"
        android:textSize="@dimen/body"
        android:layout_gravity="center_horizontal"
        android:text="kiemhung2601@gmail.com"
        android:textColor="@color/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_menu_info"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/margin_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_logout"
        android:background="@drawable/gradient_button"
        app:backgroundTint="@null"
        android:layout_marginBottom="@dimen/margin_layout"
        android:layout_marginHorizontal="@dimen/margin_layout"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_logout_white"
        android:text="@string/logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</LinearLayout>